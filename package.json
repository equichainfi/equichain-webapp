{
    "name": "equichain-webapp",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint-staged": "next lint --fix",
        "test": "",
        "prepare": "husky install",
        "prettier": "prettier . --write",
        "prettier:check": "prettier . --check"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm prettier && lint-staged && npm run lint",
            "pre-push": "npm prettier && npm test && npm run build",
            "pre-rebase": "npm prettier && npm test && npm run build"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.0.2",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "drizzle-orm": "^0.28.6",
        "husky-init": "^8.0.0",
        "lucide-react": "^0.284.0",
        "next": "latest",
        "react": "latest",
        "react-dom": "latest",
        "tailwind-merge": "^1.14.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.7.0",
        "@neondatabase/serverless": "^0.6.0",
        "@types/node": "latest",
        "@types/react": "latest",
        "@types/react-dom": "latest",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "autoprefixer": "latest",
        "drizzle-kit": "^0.19.13",
        "eslint": "^8.50.0",
        "eslint-config-next": "latest",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.1",
        "postcss": "latest",
        "prettier": "^3.0.3",
        "tailwindcss": "latest",
        "typescript": "^5.2.2",
        "zod": "^3.22.4"
    }
}
