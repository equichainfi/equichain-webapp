{
    "name": "equichain-webapp",
    "version": "0.1.0",
    "private": true,
    "license": "Apache-2.0",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint-staged": "next lint --fix --ignore-path .gitignore",
        "test": "vitest",
        "prepare": "husky install",
        "prettier": "prettier . --write --ignore-path .gitignore",
        "prettier:check": "prettier . --check",
        "check": "lint-staged && npm run prettier && npm run lint && npm run test",
        "d:up": "docker compose up",
        "studio": "drizzle-kit studio",
        "db:push": "drizzle-kit push:pg",
        "db:generate": "drizzle-kit generate:pg",
        "db:introspect": "drizzle-kit introspect:pg",
        "db:up": "drizzle-kit up:pg"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettier && npm run lint-staged && npm run lint",
            "pre-push": "npm run prettier && npm test && npm run build",
            "pre-rebase": "npm run prettier && npm test && npm run build"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --ignore-path .gitignore",
            "prettier --write --ignore-path .gitignore"
        ]
    },
    "commitlint": {
        "rules": {
            "references-empty": [
                2,
                "never"
            ]
        },
        "parserPreset": {
            "parserOpts": {
                "issuePrefixes": [
                    "EQC-"
                ]
            }
        }
    },
    "dependencies": {
        "@auth/drizzle-adapter": "^0.3.5",
        "@mantine/core": "^7.1.7",
        "@mantine/hooks": "^7.1.7",
        "@radix-ui/react-accordion": "^1.1.2",
        "@radix-ui/react-avatar": "^1.0.4",
        "@radix-ui/react-checkbox": "^1.0.4",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-dropdown-menu": "^2.0.6",
        "@radix-ui/react-hover-card": "^1.0.7",
        "@radix-ui/react-popover": "^1.0.7",
        "@radix-ui/react-scroll-area": "^1.0.5",
        "@radix-ui/react-separator": "^1.0.3",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-toggle": "^1.0.3",
        "@radix-ui/react-tooltip": "^1.0.7",
        "@tanstack/react-query": "^5.8.7",
        "@thirdweb-dev/react": "^4.1.10",
        "@thirdweb-dev/sdk": "^4.0.17",
        "axios": "^1.5.1",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "cmdk": "^0.2.0",
        "date-fns": "^2.30.0",
        "ethers": "^5.7.2",
        "flowbite-react": "^0.6.4",
        "husky-init": "^8.0.0",
        "lucide-react": "^0.284.0",
        "nanoid": "^5.0.1",
        "next": "latest",
        "next-auth": "^4.24.4",
        "postgres": "^3.4.3",
        "react": "latest",
        "react-bootstrap": "^2.9.1",
        "react-dom": "latest",
        "react-responsive-carousel": "^3.2.23",
        "tailwind-merge": "^1.14.0",
        "tailwindcss-animate": "^1.0.7",
        "ts-node": "^10.9.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^17.8.1",
        "@neondatabase/serverless": "^0.6.0",
        "@types/node": "latest",
        "@types/pg": "^8.10.9",
        "@types/react": "latest",
        "@types/react-dom": "latest",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "@upstash/redis": "^1.24.3",
        "autoprefixer": "^10.4.16",
        "dotenv": "^16.3.1",
        "drizzle-kit": "^0.19.13",
        "drizzle-orm": "^0.28.6",
        "drizzle-zod": "^0.5.1",
        "eslint": "^8.50.0",
        "eslint-config-next": "latest",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-next": "^0.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "pg": "^8.11.3",
        "pino-pretty": "^10.2.3",
        "postcss": "latest",
        "prettier": "^3.0.3",
        "sharp": "^0.32.6",
        "tailwindcss": "latest",
        "typescript": "^5.2.2",
        "vitest": "^0.34.6"
    }
}
