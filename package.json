{
    "name": "equichain-webapp",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "test": "",
        "prepare": "husky install",
        "prettier": "prettier . --write",
        "prettier:check": "prettier . --check"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm prettier && npm run lint",
            "pre-push": "npm test && npm run build && npm prettier",
            "pre-rebase": "npm test && npm run build && npm prettier"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "husky-init": "^8.0.0",
        "next": "latest",
        "react": "latest",
        "react-dom": "latest"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.7.0",
        "@types/node": "latest",
        "@types/react": "latest",
        "@types/react-dom": "latest",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "autoprefixer": "latest",
        "commitlint": "^17.7.2",
        "eslint": "^8.50.0",
        "eslint-config-next": "latest",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.1",
        "postcss": "latest",
        "prettier": "^3.0.3",
        "tailwindcss": "latest",
        "typescript": "^5.2.2"
    }
}
